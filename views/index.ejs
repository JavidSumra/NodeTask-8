<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Todos</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="grid grid-cols-9">
        <div class="col-span-3 col-start-3">
            <%- include ("header.ejs") %>
            <form action="/todos" method="post" class="mb-5">
                <div class="flex gap-4">
                    <div class="flex-auto">
                        <input type="text" placeholder="What's next?" name="title" class="w-full p-2 tetx-sm rounded outline-none border-2 border-zinc-200">
                    </div>
                    <div class="flex-auto">
                        <input type="date" name="dueDate" id="" class="rounded outline-none border-2 border-zinc-200 w-full p-2 tetx-sm leading-4">
                    </div>
                    <div class="flex-auto">
                        <button type="submit" class="rounded outline-none bg-green-700 px-4 rounded py-2 font-medium mr-3 mb-2 text-white">Add</button>
                    </div>
                </div>
            </form>
            <%- include ("todos.ejs") %>
        </div>
    </div>
</body>
</html>